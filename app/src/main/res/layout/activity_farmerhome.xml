<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteX="7dp"
    tools:layout_editor_absoluteY="42dp">


    <TextView
        android:id="@+id/fviewUserName"
        android:layout_width="306dp"
        android:layout_height="31dp"
        android:gravity="center_vertical"
        android:text="NAME!"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textColor="@color/red"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.266"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.022" />

    <androidx.cardview.widget.CardView
        android:id="@+id/CardView1"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginTop="1dp"
        app:cardCornerRadius="100dp"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.956"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.021">

        <ImageButton
            android:id="@+id/farmerProfilePicture"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/textView"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/circular_image_view"
            android:clipToOutline="true"
            android:scaleType="centerCrop"
            android:src="@drawable/profile"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.221" />

    </androidx.cardview.widget.CardView>


    <ScrollView
        android:layout_width="393dp"
        android:layout_height="603dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="72dp"
        android:paddingBottom="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.36"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="59dp">


            <ImageButton
                android:id="@+id/btnmypost"
                android:layout_width="145dp"
                android:layout_height="145dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="22dp"
                android:layout_marginTop="29dp"
                android:layout_marginEnd="219dp"
                android:background="@drawable/light_background"
                android:src="@drawable/post"
                app:layout_constraintHorizontal_bias="0.948"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.041" />


            <TextView
                android:layout_width="108dp"
                android:layout_height="match_parent"
                android:layout_below="@+id/btnprices"
                android:layout_alignStart="@+id/btnprices"
                android:layout_alignEnd="@+id/btnprices"
                android:layout_marginStart="-172dp"
                android:layout_marginTop="31dp"
                android:layout_marginEnd="209dp"
                android:gravity="center"
                android:text="MY Posts"
                android:textSize="18dp"
                android:textStyle="bold" />


            <ImageButton
                android:id="@+id/btnprices"
                android:layout_width="145dp"
                android:layout_height="145dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="216dp"
                android:layout_marginTop="29dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/light_background"
                android:src="@drawable/pprice"
                app:layout_constraintHorizontal_bias="0.948"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.041" />

            <TextView
                android:layout_width="152dp"
                android:layout_height="match_parent"
                android:layout_below="@+id/btnprices"
                android:layout_alignStart="@+id/btnMerchants"
                android:layout_alignEnd="@+id/btnMerchants"
                android:layout_marginStart="193dp"
                android:layout_marginTop="26dp"
                android:layout_marginEnd="-198dp"
                android:gravity="center"
                android:text="Current Crop Prices"
                android:textSize="18dp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/btnWeather"
                android:layout_width="145dp"
                android:layout_height="145dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="207dp"
                android:layout_marginTop="259dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/light_background"
                android:src="@drawable/weather"
                app:layout_constraintHorizontal_bias="0.948"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.041" />

            <TextView
                android:layout_width="152dp"
                android:layout_height="match_parent"
                android:layout_below="@+id/btnMerchants"
                android:layout_alignStart="@+id/btnMerchants"
                android:layout_alignEnd="@+id/btnMerchants"
                android:layout_marginStart="-5dp"
                android:layout_marginTop="23dp"
                android:layout_marginEnd="6dp"
                android:gravity="center"
                android:text="Find Merchats"
                android:textSize="18dp"
                android:textStyle="bold" />


            <ImageButton
                android:id="@+id/btnMerchants"
                android:layout_width="145dp"
                android:layout_height="145dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="27dp"
                android:layout_marginTop="259dp"
                android:layout_marginEnd="214dp"
                android:background="@drawable/light_background"
                android:src="@drawable/merchant"
                app:layout_constraintHorizontal_bias="0.948"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.041" />

            <TextView
                android:layout_width="152dp"
                android:layout_height="match_parent"
                android:layout_below="@+id/btnWeather"
                android:layout_alignStart="@+id/btnWeather"
                android:layout_alignEnd="@+id/btnWeather"
                android:layout_marginStart="-5dp"
                android:layout_marginTop="22dp"
                android:layout_marginEnd="-2dp"
                android:gravity="center"
                android:text="Weather"
                android:textSize="18dp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/btnHelp"
                android:layout_width="145dp"
                android:layout_height="145dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="31dp"
                android:layout_marginTop="501dp"
                android:layout_marginEnd="210dp"
                android:background="@drawable/light_background"
                android:src="@drawable/help"
                app:layout_constraintHorizontal_bias="0.948"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.041" />


            <TextView
                android:layout_width="152dp"
                android:layout_height="match_parent"
                android:layout_below="@+id/btnHelp"
                android:layout_alignStart="@+id/btnHelp"
                android:layout_alignEnd="@+id/btnHelp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="29dp"
                android:layout_marginEnd="0dp"
                android:gravity="center"
                android:text="Help"
                android:textSize="18dp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/btnFertilizershop"
                android:layout_width="145dp"
                android:layout_height="145dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="204dp"
                android:layout_marginTop="501dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/light_background"
                android:src="@drawable/shop"
                app:layout_constraintHorizontal_bias="0.948"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.041" />

            <TextView
                android:layout_width="152dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btnFertilizershop"
                android:layout_alignStart="@+id/btnFertilizershop"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="-3dp"
                android:layout_marginTop="27dp"
                android:layout_marginEnd="24dp"
                android:gravity="center"
                android:text="Nearest Fertilizer shop"
                android:textSize="18dp"
                android:textStyle="bold" />


        </RelativeLayout>


    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="635dp"
        android:background="@color/green"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:menu="@menu/bottom_navigation"/>


</androidx.constraintlayout.widget.ConstraintLayout>